
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//Every time  price poller receives a trade from Binance websocket it will come here 
model Trade {
  id        BigInt   @default(autoincrement())
  symbol    String
  price     BigInt
  tradeId   BigInt        //Binanceâ€™s own trade ID for avoid inserting duplicates
  timestamp DateTime @db.Timestamptz(3)
  quantity  Decimal  @db.Decimal(20, 8) // 20 digits aloowed and 8 digits after decimal

  @@id([id, timestamp])
  @@index([symbol, timestamp]) // for quick indexing and finding 
}

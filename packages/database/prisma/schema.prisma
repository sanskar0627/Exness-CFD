generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trade {
  id        BigInt   @default(autoincrement())
  symbol    String
  price     BigInt
  tradeId   BigInt
  timestamp DateTime @db.Timestamptz(3)
  quantity  Decimal  @db.Decimal(20, 8)

  @@id([id, timestamp])
  @@index([symbol, timestamp])
}
